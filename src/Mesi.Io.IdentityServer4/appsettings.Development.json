{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "System": "Information",
            "Microsoft": "Information"
        }
    },
    "UserDatabase": {
        "ConnectionString": "Data Source=users.db"
    },
    "IdentityServer": {
        "Clients": [
            {
                "Enabled": true,
                "ClientId": "vuejs-client-dev",
                "ClientName": "VueJS Web Frontend (Dev)",
                "AllowedGrantTypes": ["authorization_code"],
                "RequireClientSecret": false,
                "RequirePkce": true,
                "AccessTokenLifetime": 60,
                "RedirectUris": ["http://localhost:8080/auth/login-callback", "http://localhost:8080/auth/login-callback-silent"],
                "PostLogoutRedirectUris": ["http://localhost:8080"],
                "AllowedScopes": [
                    "openid",
                    "profile",
                    "clipboard.user.read",
                    "clipboard.user.write"
                ]
            }
        ]
    },
    "Certificate": {
        "Private": "private.key",
        "Public": "public.key"
    }
}